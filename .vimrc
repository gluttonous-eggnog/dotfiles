syntax on
" Set auto indent
set ai

" set line numbers
set nu

" set relative line numbers
set relativenumber

" Set tab width to 4 spaces
set shiftwidth=4

" Set tab width to 4 columns
set tabstop=4

" Use space characters instead of tabs
set expandtab

" Do not save backup files
set nobackup

set list
set listchars=eol:¶,tab:»·,trail:·,extends:>,precedes:<,space:·
